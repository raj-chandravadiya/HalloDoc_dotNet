@{
    Layout = "_login";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-9">
        <div class="row justify-content-center mb-4">
            <img src="/Images/SRS Screen Shorts/Fig56. Patient site 1.png" alt="" class="col-8">
        </div>
        <div class="d-flex justify-content-center mb-4">
            <h2>Forgot Your Password</h2>
        </div>

        <div class="my-4 form-floating d-flex border rounded">
            <input type="text" class="form-control no-border" placeholder="Username" />
            <img src="/Images/SRS Screen Shorts/user_circle.svg" alt="" class="input_img p-3">
            <label for="floatingInputGroup1">Username</label>
        </div>
        <div class="mb-3">
            <button type="button" class="submit_btn col-12 p-2 login_btn btn btn-info">
                Reset
                Password
            </button>
        </div>
        <div class="d-flex justify-content-center">
            <a asp-controller="login" asp-action="login_page" class="forgot_link">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"
                     fill="currentColor">
                    <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                </svg>
                Back to Login
            </a>
        </div>
    </div>

    <div class="justify-content-center row align-items-center">
        <footer class="d-flex footer justify-content-center">
            <a href="#" class="footer_links">Terms and Conditions</a>
            <span class="mx-3">|</span>
            <a href="#" class="footer_links">Privacy Policy</a>
        </footer>
    </div>
</div>